---
import ImageLink from './ImageLink.astro';
import logo from '../../public/favicon.svg';
import VerticalCenter from './VerticalCenter.astro';
---
<nav id="Header-navbar">
  <div>
    <li><ImageLink image={logo} link="/"></ImageLink></li>
    <li><a href="/games"><VerticalCenter className="Header-link-text">Hry</VerticalCenter></a></li>
    <li><a href="/sponsors"><VerticalCenter className="Header-link-text">Sponzoři</VerticalCenter></a></li>
    <li><a href="/winners"><VerticalCenter className="Header-link-text">Vítězové</VerticalCenter></a></li>
    <li><a href="/schoolList"><VerticalCenter className="Header-link-text">Seznam škol</VerticalCenter></a></li>
    <li><a href="/prices"><VerticalCenter className="Header-link-text">Ceny</VerticalCenter></a></li>
    <li><a href="/aboutUs"><VerticalCenter className="Header-link-text">O nás</VerticalCenter></a></li>
  </div>
  <div id="Nav-spacer"></div>
  <div>
    <li><a href="/myTeams"><VerticalCenter className="Header-link-button">Moje týmy</VerticalCenter></a></li>
    <li><a href="/account"><VerticalCenter className="Header-link-button Header-link-account">Účet</VerticalCenter></a></li>
  </div>
</nav>
<style is:global>
  #Header-navbar{
      background-color: black;
      padding: 1vh;
      display: flex;
      padding-left: 5vh;
      padding-right: 5vh;
      box-shadow: 0 0 10rem 0.1rem #ffad0aa1;
      margin-bottom: 7rem;
  }
  #Header-navbar div{
      padding: 1vh;
      display: flex;
  }
  #Header-navbar li{
      list-style-type: none;
      height: 100%;
      margin-right: 1rem;
  }

  #Header-navbar a{
      height: 100%;
      display: block;
      text-align: center;
      text-decoration: none;
      color: white;
  }
  .Header-link-text{
      font-size: 1.6rem;
      padding-bottom: 1rem;
      font-weight: bold;
      border-bottom: 0.1rem solid white;
  }

  .Header-link-button{
      font-size: 1.6rem;
      padding-bottom: 1rem;
      font-weight: bold;
      border: 0.1rem solid #FF9E00;
      border-radius: 1rem;
      box-shadow: 0 0 0.5rem 0.1rem #FFAF0A;
  }

  .Header-link-account{
      background-color: #FF9E00;
  }

  .Header-link-button:hover{
      box-shadow: 0 0 0rem 0rem #FFAF0A;
      color: #FF9E00;
  }

  .Header-link-account:hover{
      color: black;
  }

  #Header-navbar img{
      margin-top: 1vh;
      height: 8vh;
  }
  #Nav-spacer{
      flex-grow: 1;
  }
</style>