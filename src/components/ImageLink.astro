---
import { Image } from "astro:assets";
interface Props {
    image: ImageMetadata;
    link: string;
    alt?: string;
    className?: string; 
}
const {image, link, alt = "", className} = Astro.props;
---

<div class={className}><a class="ImageLink-a" href={link}><Image src={image} alt={alt}></Image><slot/></a></div>
<style>
    .ImageLink-a{
        text-decoration: none;
        color: white;
    }
</style>
<style is:global>
    .ImageLink-a img{
        height: 100%;
        width: auto;
    }
</style>