---
import VerticalCenter from "./VerticalCenter.astro";
---
<div class="Loading">
    <div class="Loading-spinner">
    </div>
    <div class="Loading-textHolder">
        <VerticalCenter>
            <h1 class="Loading-text">Načítání</h1>
        </VerticalCenter>
    </div>
</div>
<style>
    .Loading{
        height: 100%;
        display: flex;
    }
    @keyframes spinner {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
    .Loading-spinner {
        width: 10rem;
        height: 10rem;
        border: 2rem solid #f3f3f3; /* Light grey */
        border-top: 2rem solid #383636; /* Black */
        border-radius: 50%;
        animation: spinner 1.5s linear infinite;
        display: inline-block;
        margin-right: 3rem;
    }
    .Loading-textHolder {
        display: inline-block;
    }
</style>